{
  "name": "pg-listen",
  "version": "2.0.0",
  "license": "MIT",
  "type": "module",
  "description": "PostgreSQL LISTEN &  NOTIFY that finally works.",
  "author": "Andy Wermke (https://github.com/andywer)",
  "repository": "github:andywer/pg-listen",
  "main": "./index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "test": "vitest run --poolOptions.threads.singleThread",
    "test:database": "docker run -e POSTGRES_DB=postgres -e POSTGRES_PASSWORD=postgres -p 5432:5432 --rm postgres:15-alpine",
    "lint": "eslint --fix .",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit --p tsconfig.test.json"
  },
  "keywords": [
    "postgres",
    "listen",
    "notify",
    "subscribe",
    "events"
  ],
  "peerDependencies": {
    "pg": "8.x"
  },
  "dependencies": {
    "debug": "^4.3.5",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.14.0",
    "@types/pg": "^8.11.6",
    "@types/pg-format": "^1.0.5",
    "eslint": "^9.4.0",
    "globals": "^15.3.0",
    "lint-staged": "^15.2.5",
    "pg": "^8.11.5",
    "prettier": "^3.3.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist/**",
    "index.js"
  ],
  "lint-staged": {
    "*": [
      "prettier --write",
      "git add"
    ]
  }
}

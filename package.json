{
  "name": "pg-listen",
  "version": "1.2.0",
  "license": "MIT",
  "description": "PostgreSQL LISTEN &  NOTIFY that finally works.",
  "author": "Andy Wermke (https://github.com/andywer)",
  "repository": "github:andywer/pg-listen",
  "main": "./index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "ava-ts",
    "test:database": "docker run -e POSTGRES_DB=postgres -e POSTGRES_PASSWORD=postgres -p 5432:5432 --rm postgres:10.4-alpine",
    "posttest": "tslint --project .",
    "prepare": "npm run build"
  },
  "keywords": [
    "postgres",
    "listen",
    "notify",
    "subscribe",
    "events"
  ],
  "peerDependencies": {
    "pg": "7.x"
  },
  "dependencies": {
    "debug": "^4.0.1",
    "pg-format": "^1.0.4",
    "typed-emitter": "^0.1.0"
  },
  "devDependencies": {
    "@types/debug": "0.0.30",
    "@types/node": "^10.9.4",
    "@types/pg": "^7.4.10",
    "@types/pg-format": "^1.0.0",
    "ava": "^0.25.0",
    "ava-ts": "^0.25.2",
    "lint-staged": "^7.2.2",
    "pg": "^7.4.3",
    "prettier": "^1.14.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "files": [
    "dist/**",
    "index.js"
  ],
  "ava": {
    "serial": true
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*": [
      "prettier --write",
      "git add"
    ]
  }
}
